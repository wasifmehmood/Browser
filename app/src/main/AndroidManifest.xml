<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.privatebrowser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Vpn.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".DualBrowserActivities.DualBrowserActivity"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"/>
        <activity
            android:name=".HomeActivity"
            android:theme="@style/StartTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BrowserActivities.HistoryActivity" />
        <activity android:name=".BrowserActivities.BrowserSearchActivity" />
        <activity
            android:name=".Vpn.VpnActivity"
            android:theme="@style/AppTheme" />

        <receiver
            android:name=".Reciever.DownloadCompleteReciever"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.INPUT_METHOD_CHANGED" />
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".IncognitoActivities.DownloadActivity"
            android:theme="@style/BookmarkTheme" />
        <activity
            android:name=".IncognitoActivities.BookmarksActivity"
            android:theme="@style/BookmarkTheme" />

        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="true" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".IncognitoActivities.SearchActivity" />
        <activity
            android:name=".IncognitoActivities.StartActivity"
            android:theme="@style/StartTheme" />
        <activity android:name=".IncognitoActivities.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            />
    </application>

</manifest>